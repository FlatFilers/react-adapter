{
  "name": "@flatfile/react",
  "version": "4.0.6",
  "description": "React Flatfile Adapter",
  "main": "dist/index.js",
  "scripts": {
    "build": "NODE_ENV=production tsc",
    "lint:fix": "eslint . --ext '.ts,.tsx' --fix",
    "lint": "eslint . --ext '.ts,.tsx'",
    "prebuild": "rm -rf ./dist",
    "prepack": "npm run build",
    "start": "webpack-dev-server -d --progress --config webpack.dev.js",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "browser": {
    "src/*": "~/src/*"
  },
  "alias": {
    "src/*": "./*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FlatFilers/react-adapter.git"
  },
  "author": "Brent Kulwicki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FlatFilers/react-adapter/issues"
  },
  "homepage": "https://github.com/FlatFilers/react-adapter#readme",
  "dependencies": {
    "@flatfile/sdk": "2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@commitlint/config-conventional": "^9.1.1",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^10.4.8",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.2",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-jest": "^26.2.2",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.11.1",
    "commitlint": "^9.1.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^4.2.0",
    "cz-conventional-changelog": "^3.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "file-loader": "^6.0.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "npm-check-updates": "^7.0.2",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "source-map-loader": "^1.0.1",
    "styled-components": "^5.1.1",
    "ts-jest": "^26.1.4",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.1"
  },
  "peerDependencies": {
    "react": "^16.13.1 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.13.1 || ^17.0.0 || ^18.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "setupFiles": [
      "./jest.setup.js"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "<rootdir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --check"
    ]
  }
}
